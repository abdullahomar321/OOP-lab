#include <iostream>
#include <iomanip>

using namespace std;

int main() {
    double weightKg, weightLb;

    cout << "Enter weight in kilograms: ";
    cin >> weightKg;

    weightLb = weightKg * 2.2;

    cout << fixed << setprecision(2);
    cout << "Weight in kilograms: " << weightKg << " kg" << endl;
    cout << "Equivalent weight in pounds: " << weightLb << " lbs" << endl;

    return 0;
}
