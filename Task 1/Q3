#include <iostream>
#include <string>
using namespace std;

int main()
{
    float units;
    string name;
    int ID;
    float total;
    float surcharge,additional;
    
    cout<<"Enter name"<<endl;
    cin>>name;
    cout<<"Enter units consumed"<<endl;
    cin>>units;
    cout<<"Enter ID"<<endl;
    cin>>ID;
    
    if(units>=199){
        total=16.2*units;
        cout<<total<<endl;
        cout<<ID<<endl;
        cout<<name<<endl;
        cout<<units<<endl;
    }else if(units>=200 && units<300){
        total=units*20.1;
        cout<<total<<endl;
        cout<<ID<<endl;
        cout<<name<<endl;
        cout<<units<<endl;
    }else if(units>=300 && units<500){
        total=units*27.10;
        cout<<total<<endl;
        cout<<ID<<endl;
        cout<<name<<endl;
        cout<<units<<endl;
    }else if(units>500){
        total=35.9*units;
        cout<<total<<endl;
        cout<<ID<<endl;
        cout<<name<<endl;
        cout<<units<<endl;
    }
    if(total>18000){
        surcharge=total+(0.15*total);
        cout<<surcharge<<endl;
        cout<<ID<<endl;
        cout<<name<<endl;
        cout<<units<<endl;
        
    }else{
        cout<<total<<endl;
        cout<<ID<<endl;
        cout<<name<<endl;
        cout<<units<<endl;
    }
    
   
   

    return 0;
}
